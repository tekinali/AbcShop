@using AbcShop.Entities
@model Category


@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Bilgiler</h6>
            </div>
            <div class="card-body">

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="Name">Kategori Adı</label>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "Name", @readonly = "" })
                    </div>
                    <div class="form-group col-md-3">
                        <label for="ModifiedOn">Değiştiren</label>
                        @Html.TextBoxFor(model => model.ModifiedUsername, new { @class = "form-control", @id = "ModifiedOn", @readonly = "" })
                    </div>
                    <div class="form-group col-md-3">
                        <label for="ModifiedUsername">Ürün Sayısı</label>
                        <input type="text" class="form-control" value="@Model.Products.Count" readonly />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="Description">Açıklama</label>
                        @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @id = "Description", @readonly = "" })
                    </div>
                    <div class="form-group col-md-3">
                        <label for="CreatedOn">Oluşturma Tarihi</label>
                        @Html.TextBoxFor(model => model.CreatedOn, new { @class = "form-control", @id = "CreatedOn", @readonly = "" })
                    </div>
                    <div class="form-group col-md-3">
                        <label for="ModifiedOn">Değiştirme Tarihi</label>
                        @Html.TextBoxFor(model => model.ModifiedOn, new { @class = "form-control", @id = "ModifiedOn", @readonly = "" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <a href="@Url.Action("Index","Category")" class="btn btn-secondary btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-arrow-left"></i>
                            </span>
                            <span class="text" style="width:120px;">Listeye Dön</span>
                        </a> &nbsp;
                        <a href="@Url.Action("Edit","Category",new { id=Model.Id})" class="btn btn-warning btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-pencil-alt"></i>
                            </span>
                            <span class="text" style="width:120px;">Düzenle</span>
                        </a> &nbsp;

                        <a href="@Url.Action("Delete","Category",new { id=Model.Id})" class="btn btn-danger btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-trash"></i>
                            </span>
                            <span class="text" style="width:120px;">Sil</span>
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
