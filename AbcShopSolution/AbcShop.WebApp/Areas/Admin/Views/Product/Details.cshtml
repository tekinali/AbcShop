@using AbcShop.Entities
@model Product

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Ürün Bilgileri</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                @if (Model.ProductImages.Count == 0)
                                {
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="~/Upload/Images/Product/@Model.MainImage">
                                    </div>
                                    <div class="carousel-item active">
                                        <img class="d-block w-100" src="http://placehold.it/400x300" alt="First slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="http://placehold.it/400x300" alt="Second slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="http://placehold.it/400x300" alt="Third slide">
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="~/Upload/Images/Product/@Model.MainImage">
                                    </div>

                                    foreach (var item in Model.ProductImages)
                                    {
                                        <div class="carousel-item">
                                            <img class="d-block w-100" src="~/Upload/Images/Product/@item.FileName">
                                        </div>
                                    }
                                }
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(x => x.Name)
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @readonly = "" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.ProductCode)
                            @Html.TextBoxFor(x => x.ProductCode, new { @class = "form-control", @readonly = "" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.Title)
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @readonly = "" })
                        </div>

                        <div class="form-group">
                            <label>Eklenme Tarihi</label>
                            @Html.TextBoxFor(x => x.CreatedOn, new { @class = "form-control", @readonly = "" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.Category.Name)
                            @Html.TextBoxFor(x => x.Category.Name, new { @class = "form-control", @readonly = "" })
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(x => x.Price)
                                <input type="text" class="form-control" readonly value="@Model.Price.ToString("c")" />
                            </div>

                            <div class="form-group col-md-6">
                                @Html.LabelFor(x => x.Stock)
                                @Html.TextBoxFor(x => x.Stock, new { @class = "form-control", @readonly = "" })
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Onay Durumu</label><br />
                                @if (Model.IsApproved)
                                {
                                    <span class="badge badge-success"> Onaylı</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger"> Onaylı Değil</span>
                                }


                            </div>

                            <div class="form-group col-md-6">
                                <label>Anasayfada Görüntüleme</label><br />
                                @if (Model.IsHome)
                                {
                                    <span class="badge badge-success"> Evet</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger"> Hayır</span>
                                }
                            </div>
                        </div>


                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-5">
        <div class="card shadow mb-4">
            <div class="card-body">

                <a href="@Url.Action("Edit","Product",new { id=Model.Id})" class="btn btn-primary btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-edit"></i>
                    </span>
                    <span class="text">İçerik Düzenle</span>
                </a> 
                <a href="@Url.Action("EditImage","Product",new { id=Model.Id})" class="btn btn-warning btn-icon-split float-right">
                    <span class="icon text-white-50">
                        <i class="fas fa-images"></i>
                    </span>
                    <span class="text">Resimleri Düzenle</span>
                </a>

            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-secondary">Ürün Açıklama</h6>
            </div>
            <div class="card-body">
                @Html.Raw(Model.Description)
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-danger">Ürün Özellikler</h6>
            </div>
            <div class="card-body">
                @Html.Raw(Model.Features)
            </div>

        </div>
    </div>
</div>
