@using AbcShop.Entities
@model Product

@{
    ViewBag.Title = "ProductDetails";
}



<!-- content begin -->
<div class="row">
    <div class="col-md-6">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @if (Model.ProductImages.Count == 0)
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Upload/Images/Product/@Model.MainImage">
                    </div>
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="http://placehold.it/400x300" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="http://placehold.it/400x300" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="http://placehold.it/400x300" alt="Third slide">
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Upload/Images/Product/@Model.MainImage">
                    </div>

                    foreach (var item in Model.ProductImages)
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Upload/Images/Product/@item.FileName">
                        </div>
                    }
                }


            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    @if (Model.IsApproved)
                    {
                        <h4><span class="badge badge-success"><i class="far fa-check-circle"></i> Stokta</span></h4>
                    }
                    else
                    {
                        <h4><span class="badge badge-danger"><i class="far fa-times-circle"></i> Stokta Yok</span></h4>
                    }


                </div>

                <div class="col-md-10 text-right">
                    <div class="col-md-12">
                        <h2>@Model.Name</h2>
                    </div>
                    <div class="col-md-12">
                        <h3 class="text-danger"><i class="fas fa-lira-sign"></i> @Model.Price</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">       
            @Html.Raw(Model.Description)
        </div>
    </div>
</div>
<div class="row my-2">
    <div class="col-md-12 text-right">

        @if (Model.IsApproved)
        {
            <a href="@Url.Action("AddToCart","Cart",new { @id=Model.Id })" class="btn btn-success">
                <span class="fa fa-shopping-cart mr-2"></span>Sepete Ekle
            </a>
        }
        else
        {
            <a href="" class="btn btn-secondary disabled">
                <span class="fa fa-shopping-cart mr-2"></span>Sepete Ekle
            </a>
        }

    </div>
</div>
<div class="row mt-3">
    <div class="col-md-12">
        <div class="bd-example bd-example-tabs">
            <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
