
@{
    ViewBag.Title = "ResetPasswordConfirmed";
}

<!-- content begin -->
<div class="row my-4">
    <div class="col-md-6 offset-md-3">

        @using (Html.BeginForm("ResetPasswordConfirmed", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()


            <div class="card card-default shadow">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-3">
                            <h3>
                                <span class="fas fa-key fa-2x"></span>
                            </h3>
                        </div>
                        <div class="col-md-9 text-right">
                            <h2>Şifre Sıfırlama</h2>
                            <small>Yeni şifrenizi yazınız.</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Yeni Şifreniz:</label>
                        <input type="password" class="form-control" name="newPassword" id="newPassword" minlength="6" maxlength="16">
                    </div>                
                
                </div>
                <div class="card-footer text-muted text-right">

                    <button class="btn btn-success" type="submit">
                        <span class="fas fa-sign-in-alt mr-2"></span>Değiştir
                    </button>
                </div>
            </div>
        }

    </div>
</div>
