@using AbcShop.WebApp.ViewModels.Account
@model List<UserOrdersViewModel>

@{
    ViewBag.Title = "UserOrders";
}

<!-- content begin -->
<div class="row">
    <div class="col-md-12">
        <h2>Siparişlerim</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @if (Model.Count == 0)
        {
            <div class="alert alert-warning" role="alert">
                <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                Siparişleriniz bulunmamaktadır.
            </div>
        }
        else
        {
            <table class="table table-striped table-hover text-center table-sm">
                <thead>
                    <tr>
                        <th>Sipariş Tarihi</th>
                        <th>Sipariş No</th>
                        <th>Durumu</th>
                        <th>Tutar</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderDate.ToString("dd MMMM dddd yyyy")</td>
                            <td>@item.OrderNumber</td>
                            <td>@item.OrderState</td>
                            <td>@item.Total.ToString("c")</td>
                            <td>
                                <a href="@Url.Action("OrderDetails","Account",new {@id=item.Id })" class="btn btn-info btn-sm">
                                    İncele
                                </a>

                            </td>
                        </tr>
                    }



                </tbody>
            </table>
        }

    </div>
</div>

<!-- content end -->