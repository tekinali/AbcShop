@using AbcShop.Entities.ValueObjects
@model LoginViewModel


@{
    ViewBag.Title = "Login";
}

<!-- content begin -->
<div class="row my-4">
    <div class="col-md-6 offset-md-3">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        

            <div class="card card-default shadow">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-3">
                            <h3>
                                <span class="fas fa-sign-in-alt fa-2x"></span>
                            </h3>
                        </div>
                        <div class="col-md-9 text-right">
                            <h2>Giriş</h2>
                            <small>Lütfen Kullanıcı Adı ve şifrenizi yazınız.</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @placeholder = "Kullanıcı Adınız" })
                        @Html.ValidationMessageFor(x => x.Username, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Şifreniz" })
                        @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Beni Hatırla</label>
                        @Html.EditorFor(x => x.RememberMe, new { @class = "form-control", })
                    </div>
                </div>
                <div class="card-footer text-muted text-right">
                    <a href="ForgotPassword.html" class="btn btn-secondary mr-3">
                        <span class="fas fa-asterisk mr-2"></span>Şifremi Unuttum!
                    </a>
                    <button class="btn btn-success" type="submit">
                        <span class="fas fa-sign-in-alt mr-2"></span>Giriş
                    </button>
                </div>
            </div>
        }

    </div>
</div>
<!-- content end -->